@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Technicians.ViewModels.UserReportViewModel>

@{
    ViewData["Title"] = "Report By Date";
}

<h2>Report By Date</h2>

<div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Date Registered
                </th>

                <th>
                    Number of Customers
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateRegistered)
                    </td>
                    <td>
                        @item.CustomerCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Index" asp-controller="Request" class="btn btn-danger">Cancel</a>

