@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@model Technicians.ViewModels.ProfileEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>User Details</h2>
<hr />

<div class="container">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row myform">
            <dl class="dl-horizontal">
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CustomerName)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>

                    <div class="col-lg-4 col-md-6 myform">
                        <dt>
                            @Html.DisplayNameFor(model => model.EmailAddress)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.EmailAddress)
                        </dd>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.DateRegistered)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DateRegistered)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Balance)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NairaBalance)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Membership)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Membership)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.PropertyType)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PropertyType)
                    </dd>
                </div>
                @if (Model.Membership == MembershipType.SUB)
                {
                    <div class="col-md-6 myform">
                        <dt>
                            @Html.DisplayNameFor(model => model.Features)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Features)
                        </dd>
                    </div>
                }
            </dl>
            <div class="col-lg-4 col-md-6 myform">
                <div class="form-group">
                    <label asp-for="newBal" class="control-label">Top Up Balance</label>
                    <input asp-for="newBal" class="form-control"></input>
                    <span asp-validation-for="newBal" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 myform">
                <div class="form-group">
                    <label asp-for="Features" class="control-label"></label>
                    <textarea asp-for="Features" class="form-control"></textarea>
                    <span asp-validation-for="Features" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 myform">
                <div class="form-group">
                    <label asp-for="Membership" class="control-label"></label>
                    <select asp-for="Membership" asp-items="Html.GetEnumSelectList<MembershipType>()" class="form-control"></select>
                    <span asp-validation-for="Membership" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group myform">
            <input type="submit" value="Update" class="mybtn" />
            <a asp-action="Users" class="cancel">Cancel</a>
        </div>
    </form>
</div>
