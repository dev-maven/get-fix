@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Technicians.ViewModels.ReportByDateViewModel>

@{
    ViewData["Title"] = "Report By Date";
}

<h2>Report By Date</h2>
<div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Scheduled Date
                </th>

                <th>
                    Number of Customers
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleTime)
                    </td>
                    <td>
                        @item.CustomerCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-action="Index" class="cancel">Cancel</a>
