@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Technicians.ViewModels.ReportByServiceViewModel>

@{
    ViewData["Title"] = "Report By Service";
}

<h2>Report By Service</h2>

<div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Service Required
                </th>

                <th>
                    Number of Customers
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NeededService)
                    </td>
                    <td>
                        @item.CustomerCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-action="Index" class="cancel">Cancel</a>

