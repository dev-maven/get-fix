@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model Technicians.ViewModels.AdminEditViewModel

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "noimage.jpg");
    var videoPath = "~/Videos/" + (Model.ExistingVideoPath ?? "novideo.gif");

}

<h2>Request Details</h2>
<hr />

<div class="container">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <dl class="dl-horizontal">
            <div class="row myform">
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CustomerName)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.NeededService)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NeededService)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.ServiceType)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ServiceType)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.ScheduleTime)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ScheduleTime)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Comment)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Comment)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.MembershipType)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.MembershipType)
                    </dd>
                </div>
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.RequestStatus)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.RequestStatus)
                    </dd>
                </div>
            </div>
            <div class="row myform">
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Photo)
                    </dt>
                    <dd data-toggle="modal" data-target="#myModal">
                        <img src="@photoPath" asp-append-version="true" class="myphoto" />
                    </dd>
                </div>
                @if (Model.ExistingVideoPath != null)
                {
                <div class="col-lg-4 col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Video)
                    </dt>
                    <dd>
                        <div>
                            <video width="320" height="240" controls>
                                <source src="@Url.Content(videoPath)" type='video/mp4' />
                            </video>
                        </div>

                    </dd>
                </div>
                }
            </div>
        </dl>

        <div class="modal fade" id="myModal">
            <div class="modal-dialog modal-dialog-centered">

                <img src="@photoPath" asp-append-version="true" />
            </div>
        </div>
        <div class="row myform">
            <div class="col-md-6 col-lg-4">
                <div class="form-group">
                    <label asp-for="Cost" class="control-label"></label>
                    <input asp-for="Cost" class="form-control">
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="form-group">
                    <label asp-for="AdminComment" class="control-label"></label>
                    <textarea asp-for="AdminComment" class="form-control"></textarea>
                    <span asp-validation-for="AdminComment" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="form-group">
                    <label asp-for="CostDetails" class="control-label"></label>
                    <textarea asp-for="CostDetails" class="form-control"></textarea>
                    <span asp-validation-for="CostDetails" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="form-group">
                    <label asp-for="RequestStatus" class="control-label"></label>
                    <select asp-for="RequestStatus" asp-items="Html.GetEnumSelectList<RequestStatus>()" class="form-control"></select>
                    <span asp-validation-for="RequestStatus" class="text-danger"></span>
                </div>
            </div>

        </div>
        * - Required<br />

        <div class="form-group myform">
            <input type="submit" value="Update" class="mybtn" />
            <a asp-action="Index" class="cancel">Back</a>
        </div>
    </form>
    </div>
