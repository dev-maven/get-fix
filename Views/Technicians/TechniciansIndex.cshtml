@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model PaginatedList<Technicians.Models.Technician>

@{
    ViewData["Title"] = "Technicians";
}

<h2>List of Technicians</h2>
<br>

@using (Html.BeginForm("Index", "Technicians", FormMethod.Get))
{<div class="row">
        <div class="col-md-6">
            <div class="input-group">
                Find by First Name:   @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                <input type="submit" value="Search" />
            </div>
        </div>

    </div>

}
    <br>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("First Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().EmailAddress)
                </th>
                <th>
                    @Html.ActionLink("Date Registered", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    ACTION
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateRegistered)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.TechnicianId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TechnicianId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
