@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


@model Technicians.ViewModels.ProfileEditViewModel

@{
    ViewData["Title"] = "Profile";

}

<h2>My Profile</h2>

<hr />
<div class="container">
    <form asp-action="Profile" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row myform">
            <dl class="dl-horizontal">
                <div class="col-md-6 myform">

                    <dt>
                        @Html.DisplayNameFor(model => model.CustomerName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CustomerName)
                    </dd>
                </div>
                <div class="col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                </div>
                <div class="col-md-6 myform">
                    <dt>
                        Phone Number
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                </div>
                <div class="col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EmailAddress)
                    </dd>
                </div>
                <div class="col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Membership)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Membership)
                    </dd>
                </div>
                <div class="col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.Balance)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NairaBalance)
                    </dd>
                </div>
                <div class="col-md-6 myform">
                    <dt>
                        @Html.DisplayNameFor(model => model.PropertyType)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PropertyType)
                    </dd>
                </div>
                @if (Model.Membership == MembershipType.SUB)
                {
                    <div class="col-md-6 myform">
                        <dt>
                            @Html.DisplayNameFor(model => model.Features)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Features)
                        </dd>
                    </div>
                }

            </dl>
            <div class="col-lg-4 col-md-6 myform">
                <div class="form-group">
                    <label asp-for="PropertyType" class="control-label"></label>
                    <select asp-for="PropertyType" asp-items="Html.GetEnumSelectList<PropertyType>()" class="form-control"></select>
                    <span asp-validation-for="PropertyType" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="form-group myform">
            <input type="submit" value="Update" class="mybtn" />
            <a asp-action="Index" class="cancel">Back</a>
        </div>
    </form>
</div>
